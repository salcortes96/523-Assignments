<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <ImageView
        android:id="@+id/social_image_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_header_car" />


    <ImageView
        android:id="@+id/social_image_2"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/social_image_1"
        app:srcCompat="@drawable/social_media_wall" />

    <TextView
        android:id="@+id/social_text_1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="FOLLOW US ON YOUR FAVORITE PLATFORM"
        android:textAlignment="center"
        android:textSize="20dp"
        android:fontFamily="cursive"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/social_image_2"
        android:gravity="center_horizontal" />


</androidx.constraintlayout.widget.ConstraintLayout>


