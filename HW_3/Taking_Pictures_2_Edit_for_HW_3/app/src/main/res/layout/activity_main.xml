<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PicureTopLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AE0"
    android:keepScreenOn="true"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scaleType="center"
        android:src="@drawable/ic_launcher_foreground"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="0dp"
        tools:src="@tools:sample/avatars"></ImageView>


    <Button
        android:id="@+id/photo1Select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startCameraIntentForResult2"
        android:text="Photo 1 Select"
        android:textAllCaps="true"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="482dp" />

    <Button
        android:id="@+id/swapBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="#FFC107"
        android:onClick="startChooseImageIntentForResult2"
        android:shadowColor="#BC0404"
        android:text="SWAP PICS"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#2196F3"
        android:textColorHint="#DC0000"
        android:textColorLink="#8F0A0A"
        android:textSize="28sp"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="482dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_launcher_foreground"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="250dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/photo2Select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="startCameraIntentForResult"
        android:text="Photo 2 Select"
        android:textAllCaps="true"

        android:textSize="34sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/blurBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="#9C27B0"
        android:onClick="startChooseImageIntentForResult"
        android:text="BlURR PICS"
        android:textSize="28sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp" />

    <Button
        android:id="@+id/homeBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:background="#E91E63"
        android:text="HOME"
        android:textSize="42dp"
        android:textStyle="normal" />

</LinearLayout>
